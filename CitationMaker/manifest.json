{
  "name": "Citation Maker",
  "version": "1.0",
  "description": "In progress citation maker",
  "permissions": ["tabs","activeTab","debugger","clipboardWrite"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["background.js"]

    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "test",
    "default_icons": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
  "16": "images/get_started16.png",
  "32": "images/get_started32.png",
  "48": "images/get_started48.png",
  "128": "images/get_started128.png"
  },
  "manifest_version": 2
}
